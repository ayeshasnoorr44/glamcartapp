{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "allowUnusedLabels": true,
    "allowUnreachableCode": true,
    "noEmit": true,
    "suppressImplicitAnyIndexErrors": true,
    "suppressImplicitAnyIndexSignatureCompletionErrors": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}